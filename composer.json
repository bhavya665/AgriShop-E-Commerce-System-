{
    "name": "agricart/agrishop",
    "description": "Agricultural E-Commerce Platform with dual database support (MySQL/MongoDB)",
    "type": "project",
    "keywords": ["ecommerce", "agriculture", "php", "mysql", "mongodb"],
    "license": "MIT",
    "authors": [
        {
            "name": "AgriCart Team",
            "email": "support@agricart.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "mongodb/mongodb": "^1.12",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "AgriCart\\": "src/"
        },
        "files": [
            "config.php",
            "functions.php",
            "functions_mongo.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AgriCart\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "setup-mysql": "mysql -u root -p agri_ecommerce < database_setup.sql",
        "setup-mongodb": "php mongo_setup.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 